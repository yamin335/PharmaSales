<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="8dip" />
        <stroke android:width="0dip" android:color="#FFFFFF" />
        <gradient android:angle="-90" android:startColor="@android:color/holo_red_dark" android:endColor="@android:color/holo_red_dark"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="8dip" />
        <stroke android:width="1dip" android:color="@android:color/holo_red_dark" />
        <solid android:color="@android:color/holo_red_dark"/>
    </shape>
</item>
<item>
    <shape android:shape="rectangle"  >
        <corners android:radius="8dip" />
        <!--<stroke android:width="1dip" android:color="#000000" />-->
        <gradient android:angle="-90" android:startColor="@android:color/holo_red_light" android:endColor="@android:color/holo_red_light" />
    </shape>
</item>
</selector>